[Documentation]
Name        = Nikto
Description = Integration with Nikto: https://www.cirt.net/nikto2
Author      = GoLismero project team
Version     = 0.2
Website     = https://github.com/golismero
Copyright   = Copyright (C) 2011-2014 GoLismero Project
License     = GNU Public License v2

[Core]
Module = nikto.py
Class  = NiktoPlugin

[Arguments]
exec    =
config  =
Pause   = 0
timeout = 10
Tuning  = x6

# A list of plugins prepared by the GoLismero team.
plugins = apacheusers;auth;cgi;clientaccesspolicy;content_search;cookies;dictionary;
 fileops;headers;;msgs;mutiple_index;outdated;paths;report_csv;ssl;tests;

# A more conservative list of plugins.
#plugins = nikto_auth, nikto_cgi, nikto_clientaccesspolicy,
# nikto_content_search, nikto_cookies, nikto_core, nikto_favicon,
# nikto_fileops, nikto_msgs, nikto_outdated, nikto_parked, nikto_report_csv,
# nikto_siebel, nikto_tests

# All plugins. This may produce a lot of false positives!
#plugins = ALL
